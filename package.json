{
  "name": "opd-core",
  "version": "0.1.0",
  "private": true,
  "description": "Open Portable Document - Format ouvert, web-native, signÃ© et accessible",
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "npm run build --workspace=packages/opd-semantic && npm run build --workspace=packages/opd-sign && npm run build --workspace=packages/opd-bridge-docx && npm run build --workspace=packages/opd-pack",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "pack:cli": "pnpm --filter @opd/opd-pack build",
    "studio": "pnpm --filter opd-studio dev",
    "viewer": "pnpm --filter opd-viewer dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/ui": "^2.1.9",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "turbo": "^2.1.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0"
  }
}
